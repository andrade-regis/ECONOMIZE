<UserControl x:Class="ECONOMIZE.Relatórios.Relatórios_DataGrid_Lançamentos_Linhas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECONOMIZE.Relatórios">

    <Grid Name="Grid_principal"
          Background="#40445A"
          Height="30"
          Width="1000">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="88"/>
        </Grid.ColumnDefinitions>

        <Label HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Segoe UI"
               Foreground="#FFA7ABB7"
               Name="lbl_Data"
               FontSize="12"
               Content="12/02/2012"/>

        <Label HorizontalAlignment="Left"
               Margin="10 0 0 0"
               VerticalAlignment="Center"
               FontFamily="Segoe UI"
               Foreground="#FFA7ABB7"
               Name="lbl_Descrição"
               Grid.Column="1"
               FontSize="12"
               Content="Exemplo de Descrição de Despesa"/>

        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Name="imagem_despesa"
               Margin="5"
               Source="/ECONOMIZE;component/Imagens/despesa.png"
               Grid.Column="2">

        </Image>

        <Label HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Segoe UI"
               Foreground="#FFA7ABB7"
               Name="lbl_Grupo"
               Grid.Column="3"
               FontSize="12"
               Content="Grupo"/>

        <CheckBox Name="check_Consolidado"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  IsEnabled="False"
                  Grid.Column="4"/>

    </Grid>

</UserControl>
